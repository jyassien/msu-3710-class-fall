<div id="<%= dom_id(student) %>" style="display: flex;">

<div class="left-section">
  <h2>Student Profile</h2>
    <p>
      <strong>First name:</strong>
      <%= student.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= student.last_name %>
    </p>

    <p>
      <strong>School email:</strong>
      <%= student.school_email %>
    </p>

    <p>
      <strong>Major:</strong>
      <%= student.major %>
    </p>

    <p>
      <strong>Minor:</strong>
      <%= student.minor %>
    </p>

    <p>
      <strong>Graduation date:</strong>
      <%= student.graduation_date %>
    </p>
  </div>

  <div class="right-section" style="margin: 40px;">
    <h3>Profile Picture:</h3>
    <% if student.profile_picture.attached? %>
      <%= image_tag student.profile_picture.variant(resize_to_limit: [150, nil]) %>
    <% else %>
      <%= image_tag "default_profile_picture.png", size: "150x150" %>
    <% end %>
  </div>
</div>
