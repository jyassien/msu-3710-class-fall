<table class="table bg-dark border border-success border-2">
  <thead class="bg-dark bg-gradient text-white border-bottom-5">
    <tr class="bg-dark bg-gradient text-white">
      <th class="bg-grey text-primary fs-5 align-center "></th>
      <th class="bg-grey text-primary fs-3 ">First Name</th>
      <th class="text-primary fs-3 ">Last Name</th>
      <th class="text-primary fs-3 ">Major</th>
      <th class="text-primary fs-3 ">Graduation Date</th>
      <th class="text-primary fs-3 ">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each_with_index do |student, index| %>
      <tr class="table-gradient">
        <td class="bg-light border"><%= index + 1 %></td>
        <td class="bg-light border"><%= student.first_name %></td>
        <td class="bg-light border"><%= student.last_name %></td>
        <td class="bg-light border"><%= student.major %></td>
        <td class="bg-light border"><%= student.graduation_date.strftime("%B %d, %Y") if student.graduation_date %></td>
        <td class="bg-light border">
          <%= link_to 'Show', student_path(student), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning' %>
          <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
